{
    "env": {
        "browser": true,
        "es6": true,
        "jquery": true,
        "mocha": true,
        "webextensions": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": 0,
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": ["error", { "allow": ["warn", "error"] }],
        "block-scoped-var": "error",
        "no-var": "error"
    }
}