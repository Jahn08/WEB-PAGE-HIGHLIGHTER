{
    "author": "Jahn08",

    "background": {
        "page": "views/background-loader.html"
    },

    "browser_action": {
        "browser_style": true,
        "default_title": "Highlighter",
        "default_popup": "views/popup.html",
        "default_icon": "icons/highlighter.svg"
    },

    "browser_specific_settings": {
        "gecko": {
            "id": "highlighter@mail.com",
            "strict_min_version": "63.0"
        }
    },

    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["content_scripts/browserStorage.js", "content_scripts/pageInfo.js", 
                "content_scripts/menuMessageEvent.js", "content_scripts/messageReceiver.js", 
                "content_scripts/rangeBase.js", "content_scripts/rangeMarker.js", 
                "content_scripts/rangeNote.js", "content_scripts/messageControl.js",
                "content_scripts/marker.js"],
            "css": ["content/marker.css"]
        }
    ],

    "description": "Adds items to the context menu of your browser in order to highlight pieces of text on a web page to keep such marks after saving the page",

    "homepage_url": "https://github.com/Jahn08/WEB-PAGE-HIGHLIGHTER",

    "icons": {
        "48" : "icons/highlighter.svg",
        "96" : "icons/highlighter.svg"
    },

    "manifest_version": 2,

    "name": "Highlighter",
    
    "omnibox": {
        "keyword": "highlighter"
    },

    "options_ui": {
        "page": "views/preferences.html",
        "browser_style": true
    },

    "permissions": [
        "activeTab",
        "menus",
        "storage",
        "tabs",
        "management"
    ],

    "version": "1.0"
}
