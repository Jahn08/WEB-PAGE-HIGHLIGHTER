{
    "manifest_version": 2,
    "name": "Highlighter",
    "version": "1.0",

    "description": "Adds a items to the context menu of your browser in order to highlight pieces of text on a web page to keep such marks after saving the page",
    
    "permissions": [
        "activeTab",
        "menus",
        "storage",
        "tabs",
        "management"
    ],

    "icons": {
        "48" : "icons/highlighter48.png"
    },

    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["content_scripts/browserStorage.js", "content_scripts/pageInfo.js", 
                "content_scripts/menuMessageEvent.js", "content_scripts/messageReceiver.js", 
                "content_scripts/rangeMarker.js", "content_scripts/messageControl.js",
                "content_scripts/marker.js"],
            "css": ["content/marker.css"]
        }
    ],

    "background": {
        "page": "views/background-loader.html"
    },

    "options_ui": {
        "page": "views/preferences.html",
        "browser_style": true
    },

    "browser_action": {
        "browser_style": true,
        "default_title": "Highlighter",
        "default_popup": "views/popup.html",
        "default_icon": "icons/highlighter48.png"
    },

    "homepage_url": "https://github.com/Jahn08/WEB-PAGE-HIGHLIGHTER"
}
