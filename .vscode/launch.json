    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}\\index.js"
        },
        {
			"name": "Run mocha",
			"type": "node",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "request": "launch",
			"stopOnEntry": false,
			"args": ["tests/**/*.js", "--require", "babel-core/register"],
			"runtimeExecutable": null,
			"env": { "NODE_ENV": "testing"}
        }
    ]
}